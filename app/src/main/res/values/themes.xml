<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudentAssistanceManagerAndroid" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/prussian_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/illuminating_emerald</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:buttonStyle">@style/LightButtonColor</item>

    </style>

    <style name="Theme.StudentAssistanceManagerAndroid.NoActionBar" parent="@style/Theme.StudentAssistanceManagerAndroid">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.StudentAssistanceManagerAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.StudentAssistanceManagerAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LightButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/rich_black</item>
        <item name="android:background">@drawable/btn_light</item>
        <item name="android:textSize">25sp</item>
    </style>

